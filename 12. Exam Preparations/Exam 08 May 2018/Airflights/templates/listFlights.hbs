<section id="viewCatalog" class="background-img">
    {{> header}}

    {{#if isAuth}}
        <a href="#/create" class="add-flight">Add Flight +</a>
        <div class="added-flights">
            {{#each flights}}
                {{> flight}}
            {{/each}}
        </div>
    {{else}}
        <div>
            <h1>Login or Register to view all public flights!</h1>
        </div>
    {{/if}}

    {{> footer}}
</section>